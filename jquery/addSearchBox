  js代码
$('.searchbox ').appendTo('.datagrid-toolbar'); 
		$('#sb').appendTo('.datagrid-toolbar');
		$('#sb').searchbox({
			searcher : function(value, name) {
				//重新加载datagrid
				$('#dg').datagrid('load', {    
				    searchKey: value    
				});
			},
			prompt : '请输入值'

		});
		
